<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBmiScreen">
    <TextView
            android:text="@string/bmi_index_text_activity"
            android:layout_width="131dp"
            android:layout_height="75dp"
            android:id="@+id/textView3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"/>
    <TextView
            android:layout_width="131dp"
            android:layout_height="71dp"
            android:id="@+id/textView4"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView3" android:layout_centerVertical="true"/>
    <CalendarView
            android:layout_width="388dp"
            android:layout_height="321dp"
            android:id="@+id/calendarView"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/calendar_margin_top"
            android:layout_below="@+id/textView4"
            android:background="@color/colorButtonCount"
    />

</RelativeLayout>